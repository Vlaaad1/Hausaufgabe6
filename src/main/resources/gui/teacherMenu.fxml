      <TextField fx:id="teacherCourseID" layoutX="150.0" layoutY="215.0" promptText="Course ID" />
      <Button layoutX="500.0" layoutY="297.0" mnemonicParsing="false" onAction="#refresh" prefHeight="25.0" prefWidth="70.0" text="Refresh" />
      <Button layoutX="350.0" layoutY="345.0" mnemonicParsing="false" onAction="#clearForMenuTeacher" prefHeight="25.0" prefWidth="56.0" text="Clear" />
   </children>
