<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GUI_Controller">
   <children>
      <TextField fx:id="studentCourseID" layoutX="295.0" layoutY="275.0" promptText="Course ID" />
      <TextField fx:id="studentID" alignment="CENTER" layoutX="291.0" layoutY="30.0" promptText="Student ID" />
      <Button defaultButton="true" layoutX="130.0" layoutY="270.0" mnemonicParsing="false" onAction="#registerForMenuStudent" prefHeight="40.0" prefWidth="100.0" text="Register" />
      <Button defaultButton="true" layoutX="130.0" layoutY="130.0" mnemonicParsing="false" onAction="#showStudentCredits" prefHeight="40.0" prefWidth="100.0" text="Show Credits" />
      <Label fx:id="totalCreditsLabel" alignment="CENTER" layoutX="295.0" layoutY="130.0" prefHeight="40.0" prefWidth="150.0" text="Number of credits">
         <font>
            <Font size="13.0" />
         </font></Label>
      <Button layoutX="320.0" layoutY="330.0" minHeight="10.0" minWidth="10.0" mnemonicParsing="false" onAction="#clearForMenuStudent" prefHeight="33.0" prefWidth="75.0" text="Clear" />
      <Label alignment="CENTER" layoutX="120.0" layoutY="200.0" prefHeight="40.0" prefWidth="500.0" text="For 'Register' Button to work you have to fill in the 'Student ID' and 'Course ID' fields" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="120.0" layoutY="70.0" prefHeight="40.0" prefWidth="500.0" text="For 'Register' Button to work you have to fill in the 'Student ID' field" />
   </children>
</AnchorPane>
