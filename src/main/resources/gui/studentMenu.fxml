<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GUI_Controller">
   <children>
      <TextField fx:id="studentLastName" layoutX="300.0" layoutY="90.0" promptText="Last Name" />
      <TextField fx:id="studentTotalCredits" layoutX="300.0" layoutY="170.0" promptText="Total Credits" />
      <TextField fx:id="studentCourseID" layoutX="300.0" layoutY="210.0" promptText="Course ID" />
      <TextField fx:id="studentFirstName" layoutX="300.0" layoutY="50.0" promptText="First Name" />
      <TextField fx:id="studentID" layoutX="300.0" layoutY="130.0" promptText="Student ID" />
      <Button defaultButton="true" layoutX="220.0" layoutY="270.0" mnemonicParsing="false" onAction="#saveForMenuStudent" prefHeight="25.0" prefWidth="75.0" text="Save">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Button>
      <Button defaultButton="true" layoutX="340.0" layoutY="270.0" mnemonicParsing="false" onAction="#registerForMenuStudent" prefHeight="25.0" prefWidth="75.0" text="Register" />
